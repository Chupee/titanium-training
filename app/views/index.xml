<Alloy>
<NavigationWindow>
	
		<Window id="indexWin" class="container" title="Chats">
			<LeftNavButton id="backButton" title="Retour"></LeftNavButton>
			<RightNavButton id="addButton" title="+"></RightNavButton>
			<ListView id="catList" defaultItemTemplate="elementTemplate">
				<Templates>
					<ItemTemplate name="elementTemplate">
						<View layout="horizontal">
							<ImageView height="100" bindId="catPhoto" id="catPhoto" />
							<View layout="vertical">
					            <Label bindId="catName" id="catName" />
					            <Label bindId="catFur" id="catFur"/>
				            </View>
			            </View>
			        </ItemTemplate>
				</Templates>
				<ListSection id="catListsection"> 
				</ListSection>
			</ListView>
		</Window>
		
</NavigationWindow>
</Alloy>